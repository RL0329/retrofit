<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lorenzo11.retrofit.addUser"
    android:orientation="vertical"
    android:gravity="center|top">


    <EditText
        android:id="@+id/eMialEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="email here"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/uNameEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="username here"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/pWordEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="password here"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/fNameEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="first name here"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/lNameEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="last name here"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/addUserBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"/>

</LinearLayout>
